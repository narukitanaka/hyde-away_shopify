
<!-- BEGIN sections: page-header -->
<section class="page-header">
  <h1 class="page-heading">
    <span class="en">Topics</span>
    <span class="ja">最新情報</span>
  </h1>
</section>
<!-- END sections: page-header -->

<!-- BEGIN sections: topics -->
<section class="sec-info sec-topics">
  <div class="s-inner">

    {%- paginate blog.articles by 8 -%}
    <div class="contents_wrapper">

      {%- for article in blog.articles -%}
        <div class="row_group topics_group">
          <a href="{{ article.url }}">
            <div class="flex_wrap">
              <div class="text">
                <p class="date">
                  {{ article.published_at | date: "%Y/%m/%d" }}
                </p>
                <p class="title">
                  {{ article.title }}
                </p>
              </div>
              <div class="icon">
                <img src="https://cdn.shopify.com/s/files/1/0749/1823/2300/files/icon_arrow_r_w.svg" alt="">
              </div>
            </div>
          </a>
        </div>
      {%- endfor -%}

    </div>

    <div class="pagination_wrapper">
      {% comment %} <nav class="pagination" role="navigation" aria-label="ページネーション">
        <ul class="pagination__list" role="list">
          <li>
            <a role="link" class="pagination__item pagination__item--current">1</a>
          </li>
          <li>
            <a href="#" class="pagination__item link">2</a>
          </li>
          <li>
            …
          </li>
          <li>
            <a href="#" class="pagination__item link">99</a>
          </li>
          <li>
            <a href="#" class="pagination__item pagination__item--prev pagination__item-arrow">
              <img src="https://cdn.shopify.com/s/files/1/0749/1823/2300/files/icon_arrow_r_w.svg" alt="">
            </a>
          </li>
        </ul>
      </nav> {% endcomment %}
      <!-- ページネーション -->
      {% if paginate.pages > 1 %}
        {% render "pagination", paginate: paginate %}
      {% endif %}
      <!-- ページネーションここまで -->
    </div>
    {%- endpaginate -%}
  </div>
</section>
<!-- END sections: topics -->

<!-- BEGIN sections: breadcrumbs -->
<div class="breadcrumbs">
  <ol>
    <li>
      <a href="{{ routes.root_url }}">
        <span>home</span>
      </a>
    </li>
    <li>
      <span>Topics</span>
    </li>
  </ol>
</div>
<!-- END sections: breadcrumbs -->

{% schema %}
  {
    "name": "topic",
    "presets": [
      {
        "name": "topic"
      }
    ]
  }
{% endschema %}